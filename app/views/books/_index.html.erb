<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% books.each do |book| %>

      <tr>
        <td>
          <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image("40x40") %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <td id="favorite-btn_<%= book.id %>">
            <%= render 'favorites/favorite-btn', book: book %>
          </td>
        </td>
        <td>
          <p>
            <%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
        </td>
        <td id="star_<%= book.id%>">
          <script>
            $('#star_<%= book.id%>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= book.star %>,
            });
          </script>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>